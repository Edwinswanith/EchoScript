{
  "name": "EchoScripts",
  "version": "1.0.0",
  "description": "Windows desktop speech-to-text application with Deepgram integration",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "node scripts/prebuild.js",
    "build": "npm run rebuild && electron-builder",
    "build:win": "npm run rebuild && electron-builder --win",
    "build:linux": "npm run rebuild && electron-builder --linux",
    "rebuild": "electron-rebuild -f -w @nut-tree-fork/nut-js"
  },
  "keywords": [
    "speech-to-text",
    "deepgram",
    "electron",
    "voice-typing"
  ],
  "author": {
    "name": "EchoScripts Developer",
    "email": "developer@echoscripts.app"
  },
  "license": "MIT",
  "dependencies": {
    "18": "^0.0.0",
    "@elevenlabs/elevenlabs-js": "^2.28.0",
    "@nut-tree-fork/nut-js": "^4.2.0",
    "auto-launch": "^5.0.6",
    "elevenlabs-node": "^2.0.3",
    "ffmpeg-static": "^5.3.0",
    "googleapis": "^131.0.0",
    "groq-sdk": "^0.37.0",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^6.3.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.echoscripts.app",
    "productName": "EchoScripts",
    "files": [
      "src/**/*",
      "assets/**/*",
      "config.js",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/@nut-tree-fork/**/*"
    ],
    "extraResources": [
      {
        "from": "config.js",
        "to": "config.js"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signingHashAlgorithms": []
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    }
  }
}
